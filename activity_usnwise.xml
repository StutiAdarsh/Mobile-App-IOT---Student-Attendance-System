<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.attendancesystem.shome">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/tl">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dip"
                android:text="Subject name" />

            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dip"
                android:text="Attendance Status" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/atd1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dip"
                android:text="" />

            <TextView
                android:id="@+id/atd2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dip"
                android:text="" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/atd3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dip"
                android:text="" />

            <TextView
                android:id="@+id/atd4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dip"
                android:text="" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/atd5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dip"
                android:text="" />

            <TextView
                android:id="@+id/atd6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dip"
                android:text="" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/atd7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dip"
                android:text="" />

            <TextView
                android:id="@+id/atd8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dip"
                android:text="" />
        </TableRow>


    </TableLayout>
</LinearLayout>

